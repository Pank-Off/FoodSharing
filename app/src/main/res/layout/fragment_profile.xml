<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.profile.ProfileFragment">

    <ImageView
        android:id="@+id/avatar_view"
        android:layout_width="@dimen/avatar_size"
        android:layout_height="@dimen/avatar_size"
        android:layout_margin="@dimen/avatar_margin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/ic_account_circle_black_24dp" />

    <TextView
        android:id="@+id/first_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/avatar_view"
        app:layout_constraintTop_toTopOf="@+id/avatar_view"
        tools:text="Имя" />
    <TextView
        android:id="@+id/gave_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/avatar_view"
        app:layout_constraintTop_toBottomOf="@+id/first_name"
        android:text="Отдал: " />

    <TextView
        android:id="@+id/took_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/avatar_view"
        app:layout_constraintTop_toBottomOf="@+id/gave_text_view"
        android:text="Забрал: " />

    <TextView
        android:id="@+id/safe_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/avatar_view"
        app:layout_constraintTop_toBottomOf="@+id/took_text_view"
        android:text="Надежность" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="10dp"
        android:src="@drawable/circle"
        app:layout_constraintBottom_toBottomOf="@+id/safe_text_view"
        app:layout_constraintStart_toEndOf="@+id/safe_text_view"
        app:layout_constraintTop_toTopOf="@+id/safe_text_view" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/gave_food_btn"
        android:layout_width="@dimen/width_btn_food"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="Отдать еду"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/safe_text_view" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/gave_btn"
        android:layout_width="@dimen/width_btn_food"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="Отдаю"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gave_food_btn" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/history_btn"
        android:layout_width="@dimen/width_btn_food"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="История"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gave_btn" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/log_out"
        android:layout_width="@dimen/width_btn_food"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="Выйти из аккаунта"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/history_btn" />
</androidx.constraintlayout.widget.ConstraintLayout>